<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".profiles">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_all"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffffffff"
            app:srcCompat="@drawable/ib_profile_all" />

        <ImageButton
            android:id="@+id/btn_loving"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffffffff"
            app:srcCompat="@drawable/ib_profile_like" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="442dp"
        android:orientation="vertical">


        <ListView
            android:id="@+id/allListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".20"
            app:srcCompat="@drawable/ib_home" />

        <ImageButton
            android:id="@+id/btn_profiles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".20"
            app:srcCompat="@drawable/ib_profile" />

        <ImageButton
            android:id="@+id/btn_chatting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".20"
            app:srcCompat="@drawable/ib_message" />

        <ImageButton
            android:id="@+id/btn_board"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".20"
            app:srcCompat="@drawable/ib_board" />

        <ImageButton
            android:id="@+id/btn_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".20"
            app:srcCompat="@drawable/ib_setting" />

    </LinearLayout>
</LinearLayout>